<h1> <%= @attraction.name %></h1>

<%= form_for @attraction, :url => {:controller => 'attractions', :action => 'ride', method: 'post'} do |f| %>
  <%= f.hidden_field :id %>
  <%= f.submit "Go on this ride"%>
<% end %>

<% if @current_user.admin %>
  <%= link_to "Edit Attraction", edit_attraction_path %>
<% end %>
